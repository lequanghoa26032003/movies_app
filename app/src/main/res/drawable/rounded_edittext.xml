<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Bo góc -->
    <corners android:radius="8dp" />

    <!-- Màu nền -->
    <solid android:color="@android:color/white" />

    <!-- Đường viền -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Padding -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

</shape>